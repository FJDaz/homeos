{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AetherFlow Validation Schema",
  "description": "Schema for validation files generated by Claude Code",
  "type": "object",
  "required": ["is_valid", "score", "feedback"],
  "properties": {
    "is_valid": {
      "type": "boolean",
      "description": "Whether the step output is valid"
    },
    "score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Quality score from 0.0 to 1.0"
    },
    "feedback": {
      "type": "string",
      "description": "Detailed feedback on the validation"
    },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of improvement suggestions"
    },
    "needs_correction": {
      "type": "boolean",
      "description": "Whether correction is needed (if score < 0.7)"
    },
    "correction_prompt": {
      "type": "string",
      "description": "Specific instructions for DeepSeek to correct the code"
    }
  }
}
