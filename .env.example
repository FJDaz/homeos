# AETHERFLOW Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================

# DeepSeek API (REQUIRED - Main provider)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Mistral API (Optional - For Codestral)
MISTRAL_API_KEY=your_mistral_api_key_here

# Google API (Optional - For Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Groq API (Optional - For Groq)
GROQ_API_KEY=your_groq_api_key_here

# Anthropic API (Optional - For Claude validation, not used in current version)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# API Configuration
# ============================================================================

# DeepSeek Configuration
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-coder

# Mistral/Codestral Configuration
MISTRAL_API_URL=https://api.mistral.ai/v1/chat/completions
CODESTRAL_MODEL=codestral-latest

# Gemini Configuration
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1/models
GEMINI_MODEL=gemini-2.0-flash

# Groq Configuration
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.3-70b-versatile

# Default Provider
DEFAULT_PROVIDER=deepseek

# ============================================================================
# Request Parameters
# ============================================================================

MAX_TOKENS=4000
TEMPERATURE=0.7
TIMEOUT=60
MAX_RETRIES=3

# ============================================================================
# Paths
# ============================================================================

PLAN_FILE_PATH=plan.json
OUTPUT_DIR=output
LOGS_DIR=logs

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO

# ============================================================================
# Cost Tracking
# ============================================================================

# DeepSeek Pricing (as of 2025)
DEEPSEEK_INPUT_COST_PER_1K=0.00014
DEEPSEEK_OUTPUT_COST_PER_1K=0.00028

# Mistral/Codestral Pricing (as of 2025)
MISTRAL_INPUT_COST_PER_1K=0.0003
MISTRAL_OUTPUT_COST_PER_1K=0.0003

# Gemini Cost Tracking (free tier with quota)
GEMINI_INPUT_COST_PER_1K=0.0
GEMINI_OUTPUT_COST_PER_1K=0.0

# ============================================================================
# Validation Settings
# ============================================================================

# Enable Claude Code validation (manual, via files)
ENABLE_CLAUDE_VALIDATION=false

# ============================================================================
# Balance Check Settings (Optional)
# ============================================================================

# Minimum balance threshold (USD) - Request will fail if balance is below this
MIN_BALANCE_THRESHOLD=0.10
# Enable balance check before requests (if API supports it)
ENABLE_BALANCE_CHECK=true
